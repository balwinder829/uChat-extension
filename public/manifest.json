{
  "manifest_version": 3,
  "name": "Cig Chat",
  "description": "Chat on Fireberry",
  "version": "1.0",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
        "16": "wow-by-ebs.png",
        "32": "wow-by-ebs.png",
        "48": "wow-by-ebs.png",
        "128": "wow-by-ebs.png"
    },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://app.fireberry.com/*"],
      "js": ["content.js"]
    }
  ]
}